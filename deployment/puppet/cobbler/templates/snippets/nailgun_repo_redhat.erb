#else
<% @ks_repo.each do |repo| %>
[<%= repo['id'] %>]
name=<%= repo['name'] %>
repo['url'].sub!('centos','redhat')
baseurl=<%= repo['url'] %>
gpgcheck=0
<% end %>
#end if
EOF