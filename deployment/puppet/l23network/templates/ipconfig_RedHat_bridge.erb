DEVICE=lnx-<%= @interface %>
BOOTPROTO=none
ONBOOT=yes
TYPE=Bridge
DELAY=0
USERCTL=no
<% if @vlan_mode -%>
VLAN=yes
<% end -%>
<% if @vlan_mode == 'vlan' -%>
VLAN_NAME_TYPE=VLAN_PLUS_VID_NO_PAD
PHYSDEV=<%= @vlan_dev %>
<% end -%>
<% if @mtu -%>
MTU=<%= @mtu %>
<% end -%>
<% if @macaddr -%>
MACADDR=<%= @macaddr.upcase %>
<% end -%>
